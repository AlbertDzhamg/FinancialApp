<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/rcSecondaryCardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/phenomenaItemBookView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito"
                android:text="Маленький крошка"
                android:textSize="17sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="10dp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:layout_toRightOf="@+id/rcImageView"
                android:paddingRight="10dp"/>

            <TextView
                android:id="@+id/phenomenaItemAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phenomenaItemBookView"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/rcImageView"
                android:fontFamily="@font/nunito"
                android:text="Автор:"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:text="Автор:" />

            <TextView
                android:id="@+id/phenomenaItemAuthorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phenomenaItemBookView"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:layout_toRightOf="@+id/phenomenaItemAuthor"
                android:fontFamily="@font/nunito"
                android:textColor="@color/black"
                android:textStyle="normal"
                tools:text="Автор" />

            <TextView
                android:id="@+id/phenomenaItemPages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phenomenaItemAuthor"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/rcImageView"
                android:fontFamily="@font/nunito"
                android:text="Кол-во страниц:"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:text="Кол-во страниц:" />

            <TextView
                android:id="@+id/phenomenaItemPagesNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phenomenaItemAuthor"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/phenomenaItemPages"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/nunito"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:textSize="15sp"
                tools:text="Кол-во страниц:" />

            <TextView
                android:id="@+id/phenomenaItemDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phenomenaItemPages"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/rcImageView"
                android:fontFamily="@font/nunito"
                android:text="Год: "
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:text="Год: "
                android:paddingBottom="10dp"/>

            <TextView
                android:id="@+id/phenomenaItemDateNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phenomenaItemPages"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/phenomenaItemDate"
                android:fontFamily="@font/nunito"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textStyle="normal"
                tools:text="Дата"
                android:textSize="15sp"/>


            <ImageView
                android:id="@+id/rcImageView"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                tools:srcCompat="@tools:sample/avatars"
                android:layout_alignParentLeft="true"
                />

            <TextView
                android:id="@+id/canBeRead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phenomenaItemPages"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/phenomenaItemPages"
                android:fontFamily="@font/nunito"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="3dp"
                android:text="Читать"
                android:background="@color/special_green"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"/>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>